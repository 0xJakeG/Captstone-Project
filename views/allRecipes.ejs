<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/head'); %>
      <title>This is the future recipeMeta Page</title>
  </head>

  <body>
    <header>
        <%- include('./partials/header'); %>
      </header>

      <main>
        <div class="hero-container flex-row">
            <section class="hero flex-column">
                <h1>All Recipes</h1>
                <br>
                <div class="seriousEats" id="recipe_list">
                    <nav>
                    <% data.forEach(entry => { %>
                      <div id="<%= entry.recipe_id%>">
                        <a class="recipe_list_item" href="/allRecipes/<%= entry.recipe_id%>"><%= entry.recipe_name%></a>
                        <p><%= entry.recipe_description%></p>
                        <button action="/favorite_recipe">Favorite</button>
                        <button action="/review_recipe">Leave a review</button>
                      <%})%>
                      </div>
                    </nav>
                </div>
            </section>
        </div>
      </main>
  </body>